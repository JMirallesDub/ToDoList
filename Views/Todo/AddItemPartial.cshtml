@model TodoItem


    <form asp-action="AddItem" method="POST">
        <div class="form-group row">
            <label asp-for="Title" for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg">Task title:</label>
            <div class="col-sm-10">
                <input asp-for="Title" type="text" class="form-control form-control-lg" id="colFormLabelLg" placeholder="Title">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Description" for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg">Task description:</label>
            <div class="col-sm-10">
                <input asp-for="Description" type="text" class="form-control form-control-lg" id="colFormLabelLg" placeholder="Description">
                <span asp-validation-for="Description" class="text-danger" ></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Add</button>
    </form>